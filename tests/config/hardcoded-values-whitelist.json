{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Hardcoded Values Whitelist",
  "description": "Files and patterns that are allowed to use hardcoded metric values",
  "whitelist": [
    {
      "file": "tests/mocks/data.ts",
      "reason": "Mock data for testing purposes"
    },
    {
      "file": "tests/fixtures/mockStats.ts",
      "reason": "Test fixtures with sample data"
    },
    {
      "file": "docs/examples/",
      "reason": "Documentation examples showing sample calculations"
    },
    {
      "file": "scripts/migration/",
      "reason": "Historical migration scripts with fixed values"
    },
    {
      "file": ".test.ts",
      "reason": "Test files can use hardcoded values for assertions"
    },
    {
      "file": ".spec.ts",
      "reason": "Spec files can use hardcoded values for testing"
    },
    {
      "file": "node_modules/",
      "reason": "Third-party dependencies"
    },
    {
      "file": ".next/",
      "reason": "Build output"
    }
  ]
}
